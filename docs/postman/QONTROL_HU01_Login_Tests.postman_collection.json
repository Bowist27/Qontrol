    "item": [
        {
            "name": "1. Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/auth/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "health"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status is 200', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test('Service is OK', function () {",
                            "    var json = pm.response.json();",
                            "    pm.expect(json.status).to.eql('ok');",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "2. Login Exitoso (Admin)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"jose.admin@gmail.com\",\n    \"password\": \"Admin123!\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "auth",
                        "login"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status is 200', function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test('Response has token', function () {",
                            "    var json = pm.response.json();",
                            "    pm.expect(json).to.have.property('token');",
                            "    pm.collectionVariables.set('token', json.token);",
                            "});",
                            "",
                            "pm.test('Response has user', function () {",
                            "    var json = pm.response.json();",
                            "    pm.expect(json).to.have.property('user');",
                            "    pm.expect(json.user.email).to.eql('jose.admin@gmail.com');",
                            "    pm.expect(json.user.role).to.eql('admin');",
                            "});",
                            "",
                            "pm.test('Token is valid JWT', function () {",
                            "    var json = pm.response.json();",
                            "    var parts = json.token.split('.');",
                            "    pm.expect(parts.length).to.eql(3);",
                            "});"
                        ]
                    }
                }
            ]
        },
